@model BetaCinemas.Models.Contact

@{
    ViewData["Title"] = "Trả lời phản hồi";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select asp-for="MemberId" asp-items="ViewBag.MemberId" 
                        class="form-control"  disabled></select>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SentTime" class="control-label"></label>
                <input asp-for="SentTime" class="form-control" disabled />
                <span asp-validation-for="SentTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SentContent" class="control-label"></label>
                <input asp-for="SentContent" class="form-control" disabled />
                <span asp-validation-for="SentContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplyContent" class="control-label"></label>
                <input asp-for="ReplyContent" class="form-control" />
                <span asp-validation-for="ReplyContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
