@using Microsoft.AspNetCore.Identity
@inject SignInManager<Member> SignInManager
@inject UserManager<Member> UserManager

<div class="dropdown-menu dropdown-menu-right" aria-labelledby="bd-versions">
    @if (SignInManager.IsSignedIn(User))
    {
        if (User.Identity.Name.Equals("admin@betacorp.vn"))
        {
            <a class="dropdown-item" 
               asp-area="Administrator" asp-controller="Home" asp-action="Index">Bảng điều khiển</a>
        }
        else
        {
            <a class="dropdown-item"
               asp-area="Identity" asp-page="/Account/Manage/Index">Thông tin cá nhân</a>
            <a class="dropdown-item" asp-controller="Ticket" asp-action="Index">Vé</a>
        }
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Logout"
           asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Đăng xuất</a>
    }
    else
    {
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
    }
</div>