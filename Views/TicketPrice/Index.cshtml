@model IEnumerable<BetaCinemas.Models.TicketPrice>

@{
    ViewData["Title"] = "Giá vé";

    var list2d = Model.Where(item => item.Is2D == true && item.IsSpecial == false).ToList();
    var list3d = Model.Where(item => item.Is2D == false && item.IsSpecial == false).ToList();
    var specialList = Model.Where(item => item.IsSpecial == true).ToList();
}

<h3>Định dạng 2D</h3>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.DateType)</th>
                <th>@Html.DisplayNameFor(model => model.StartTime)</th>
                <th>@Html.DisplayNameFor(model => model.EndTime)</th>
                <th>@Html.DisplayNameFor(model => model.IsPriority)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in list2d)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DateType)</td>
                        <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                        @{
                            if (item.IsPriority == true)
                            {
                                <td>Ưu tiên</td>
                            }
                            else
                            {
                                <td>Không ưu tiên</td>
                            }

                        }
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<br />
