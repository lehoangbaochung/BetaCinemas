@using Microsoft.AspNetCore.Identity
@model IEnumerable<BetaCinemas.Models.Showtime>
@inject SignInManager<Member> SignInManager

@{
    ViewData["Title"] = "Lịch chiếu";
}

<h3>Lịch chiếu</h3>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Movie)</th>
                <th>@Html.DisplayNameFor(model => model.Date)</th>
                <th>@Html.DisplayNameFor(model => model.Time)</th>
                <th>@Html.DisplayNameFor(model => model.Is2D)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a href="/Movie/Information/@Html.DisplayFor(modelItem => item.Movie.Id)">
                                @Html.DisplayFor(modelItem => item.Movie.Title)
                            </a>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Time)</td>
                        @{
                            if (item.Is2D == true)
                            {
                                <td>2D</td>
                            }
                            else
                            {
                                <td>3D</td>
                            }

                            if (item.IsSpecial)
                            {
                                <td>Suất chiếu đặc biệt</td>
                            }
                            else
                            {
                                <td></td>
                            }
                        }
                    </tr>
                }
            }
        </tbody>
    </table>
</div>