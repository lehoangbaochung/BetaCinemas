@model BetaCinemas.Models.Showtime

@{
    ViewData["Title"] = "Chi tiết suất chiếu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h3>@ViewData["Title"]</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Is2D)
        </dt>
        @{
            if (Model.Is2D == true)
            {
                <dd class="col-sm-10">2D</dd>
            }
            else
            {
                <dd class="col-sm-10">3D</dd>
            }
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Id)
        </dd>
    </dl>
</div>
