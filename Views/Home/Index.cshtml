@{
    ViewData["Title"] = "Trang chủ";
}
<!-- Carousel -->
<div id="carouselHomeIndicators" class="carousel slide"
     data-interval="3000" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#carouselHomeIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselHomeIndicators" data-slide-to="1"></li>
        <li data-target="#carouselHomeIndicators" data-slide-to="2"></li>
    </ol>
    <!-- Banners -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="page-item"
                 src="https://files.betacorp.vn/files/ecm/2021/05/07/1702x621-thong-bao-ngung-hoat-dong-114539-070521-34.jpg"
                 style="width:100%;">
        </div>
        <div class="carousel-item">
            <img class="page-item"
                 src="https://files.betacorp.vn/files/ecm/2021/04/29/1702x621-nhap-ma-shopee-135625-290421-93.jpg"
                 style="width:100%;">
        </div>
        <div class="carousel-item">
            <img class="page-item"
                 src="https://files.betacorp.vn/files/ecm/2021/05/04/1702x621-rs-shopee-084824-040521-29.jpg"
                 style="width:100%;">
        </div>
    </div>
    <!-- Control buttons -->
    <a class="carousel-control-prev" href="#carouselHomeIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Trước</span>
    </a>
    <a class="carousel-control-next" href="#carouselHomeIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Tiếp</span>
    </a>
</div>