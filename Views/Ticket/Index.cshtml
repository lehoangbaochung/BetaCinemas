@model IEnumerable<BetaCinemas.Models.Ticket>

@{
    ViewData["Title"] = "Hành trình điện ảnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@ViewData["Title"]</h3>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.SoldTime)</th>
                <th>@Html.DisplayNameFor(model => model.Showtime)</th>
                <th>@Html.DisplayNameFor(model => model.TicketPrice)</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.SoldTime)</td>
                        <td>@Html.DisplayFor(modelItem => item.Showtime)</td>
                        <td>@Html.DisplayFor(modelItem => item.TicketPrice)</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
