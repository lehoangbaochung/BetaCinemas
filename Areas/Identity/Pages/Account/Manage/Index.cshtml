@page
@model IndexModel
@{
    ViewData["Title"] = "Thông tin thành viên";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" placeholder="Họ tên" />
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender"></label>
                <select asp-for="Input.Gender" class="form-control" data-placeholder="Chọn">
                    <option class="option-item">Chọn</option>
                    <option class="option-item" value="true">Nam</option>
                    <option class="option-item" value="false">Nữ</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Birthday"></label>
                <input asp-for="Input.Birthday" type="date" class="form-control" placeholder="Ngày sinh" />
                <span asp-validation-for="Input.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Số điện thoại" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.HomeAddress"></label>
                <input asp-for="Input.HomeAddress" class="form-control" placeholder="Địa chỉ" />
                <span asp-validation-for="Input.HomeAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.CardNumber"></label>
                <input asp-for="Input.CardNumber" class="form-control" placeholder="Số CMND/CCCD/Hộ chiếu" />
                <span asp-validation-for="Input.CardNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Cập nhật</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}