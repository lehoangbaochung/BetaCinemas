@model BetaCinemas.Models.Contact

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Contact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <select asp-for="MemberId" class ="form-control" asp-items="ViewBag.MemberId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SentTime" class="control-label"></label>
                <input asp-for="SentTime" class="form-control" />
                <span asp-validation-for="SentTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SentContent" class="control-label"></label>
                <input asp-for="SentContent" class="form-control" />
                <span asp-validation-for="SentContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplyTime" class="control-label"></label>
                <input asp-for="ReplyTime" class="form-control" />
                <span asp-validation-for="ReplyTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReplyContent" class="control-label"></label>
                <input asp-for="ReplyContent" class="form-control" />
                <span asp-validation-for="ReplyContent" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsReplied" /> @Html.DisplayNameFor(model => model.IsReplied)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
